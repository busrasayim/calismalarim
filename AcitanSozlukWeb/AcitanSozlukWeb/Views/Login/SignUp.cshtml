@using AcitanSozlukWeb.Models
@model User

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Sign Up</h2>
<hr />

@using (Html.BeginForm("SignUp", "Login", FormMethod.Post, new { id = "frmSignup", enctype = "multipart/form-data" }))
{
    <div id="register" class="row">

        <div class="col-md-6 col-md-offset-2">

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Nickname)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Nickname, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    @Html.ValidationMessageFor(x => x.Nickname, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Name)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Adınız" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Surname)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Soyadınız" })
                    @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Password)
                </label>

                <div class="col-md-8">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.EMail)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", placeholder = "E-Posta Adresiniz" })
                    @Html.ValidationMessageFor(x => x.EMail, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Biography)
                </label>

                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.Biography, 5, 30, new { @class = "form-control", placeholder = "Kısa Biyografi" })
                    @Html.ValidationMessageFor(x => x.Biography, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.Avatar)
                </label>

                <div class="col-md-8">
                    <input type="file" id="Avatar_file" name="Avatar_file" class="form-control" placeholder="Avatar" />
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.FacebookLink)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.FacebookLink, new { @class = "form-control", placeholder = "Facebook Url" })
                    @Html.ValidationMessageFor(x => x.FacebookLink, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <label class="control-label col-md-4">
                    @Html.DisplayNameFor(x => x.TwitterLink)
                </label>

                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.TwitterLink, new { @class = "form-control", placeholder = "Twitter Url" })
                    @Html.ValidationMessageFor(x => x.TwitterLink, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                <div class="col-md-12 text-right">
                    <button type="submit" id="btnSignUp" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;
                        Sign Up
                    </button>
                </div>

            </div>

        </div>

    </div>

}


<script src="~/Scripts/check-nickname-ajax.js"></script>
