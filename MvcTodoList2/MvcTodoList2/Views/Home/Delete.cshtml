@model MvcTodoList2.Models.TaskItem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TaskItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(x => x.CreatedOn)
        </dt>

        <dd>
            @Html.DisplayFor(x => x.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(x => x.ModifiedOn)
        </dt>

        <dd>
            @Html.DisplayFor(x => x.ModifiedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(x => x.IsCompleted)
        </dt>

        <dd>
            @{
                string sonuc = "";

                if (Model.IsCompleted == true)
                {
                    sonuc = "Yapıldı.";
                }
                else
                {
                    sonuc = "Tamamlanmadı.";
                }
            }

            @sonuc
        </dd>

        <dt>
            @Html.DisplayNameFor(x => x.Description)
        </dt>

        <dd>
            @Html.DisplayFor(x => x.Description)
        </dd>

    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @MyHelper.CreateActionLink("Home","AnaSayfa","Geri Dön","default", "arrow-left")
        </div>
    }
</div>
