<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">

        <div id="header">

            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle collapsed"
                                data-toggle="collapse" data-target="#menu"
                                aria-expanded="false">

                            <span class="sr-only">Toggle Navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>

                        </button>

                        @Html.ActionLink("My ToDo List 2", "AnaSayfa", "Home", null,
                              new { @class = "navbar-brand", title = "My Todo List Uygulaması" })

                    </div>

                    <div class="collapse navbar-collapse" id="menu">
                        <ul class="nav navbar-nav">
                            <li>
                                @Html.ActionLink("List", "AnaSayfa", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Add Task", "AddTask", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Add Multi Tasks", "AddMultiTask", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Completed Tasks", "CompletedTasks", "Home")
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>

        </div>

        <div id="content">
            @RenderBody()
        </div>

        <div id="footer">
            <div class="container-fluid text-center">
                <hr />
                Tüm hakları saklıdır.&copy; - @DateTime.Now.Year
                
            </div>
        </div>

    </div>

</body>
</html>
